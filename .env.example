# PMP WordPress Docker Environment Configuration
# Copy this file to .env and modify as needed

# Database Configuration
MYSQL_ROOT_PASSWORD=root_password
MYSQL_DATABASE=pmp_wordpress
MYSQL_USER=pmp_user
MYSQL_PASSWORD=pmp_password

# WordPress Configuration
WORDPRESS_DB_HOST=db
WORDPRESS_DB_NAME=pmp_wordpress
WORDPRESS_DB_USER=pmp_user
WORDPRESS_DB_PASSWORD=pmp_password
WORDPRESS_TABLE_PREFIX=wp_

# WordPress Debug Settings
WORDPRESS_DEBUG=1
WP_DEBUG_LOG=1
WP_DEBUG_DISPLAY=0

# Port Configuration
WORDPRESS_PORT=8080
PHPMYADMIN_PORT=8081
MAILHOG_WEB_PORT=8025
MAILHOG_SMTP_PORT=1025
MYSQL_PORT=3306
REDIS_PORT=6379

# SSL Configuration (for HTTPS)
SSL_CERT_PATH=./docker/ssl/cert.pem
SSL_KEY_PATH=./docker/ssl/key.pem

# Performance Settings
PHP_MEMORY_LIMIT=512M
PHP_UPLOAD_MAX_FILESIZE=64M
PHP_POST_MAX_SIZE=64M
PHP_MAX_EXECUTION_TIME=300

# Cache Settings
ENABLE_REDIS_CACHE=true
NGINX_CACHE_ENABLED=true

# Development Settings
ENABLE_XDEBUG=false
XDEBUG_MODE=debug
XDEBUG_CLIENT_HOST=host.docker.internal