# Docker Environment Configuration for PMP WordPress Integration
# Copy this file to .env and update with your actual values

# YouTube API Configuration (from existing system)
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_CHANNEL_ID=your_channel_id_here
CHANNEL_NAME=PMP Certification Journey
CHANNEL_EMAIL=contact@pmp-course.com

# YouTube OAuth (optional, for advanced features)
YOUTUBE_CLIENT_ID=your_client_id_here
YOUTUBE_CLIENT_SECRET=your_client_secret_here
YOUTUBE_REFRESH_TOKEN=your_refresh_token_here

# Database Configuration
MYSQL_ROOT_PASSWORD=root_password
MYSQL_DATABASE=pmp_wordpress
MYSQL_USER=wordpress
MYSQL_PASSWORD=wordpress_password

# Analytics Database
ANALYTICS_DB_HOST=mysql
ANALYTICS_DB_PORT=3306
ANALYTICS_DB_NAME=pmp_analytics
ANALYTICS_DB_USER=analytics
ANALYTICS_DB_PASSWORD=analytics_password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# WordPress Configuration
WORDPRESS_URL=http://localhost:8080
WORDPRESS_API_KEY=your_wordpress_api_key_here
WORDPRESS_DEBUG=1

# Analytics API Configuration
API_PORT=3000
API_SECRET=your_api_secret_key_here
NODE_ENV=development

# Email Marketing Integration (optional)
EMAIL_API_KEY=your_email_api_key_here
EMAIL_LIST_ID=your_email_list_id_here

# Google Analytics (optional)
GOOGLE_ANALYTICS_ID=your_ga_id_here

# Social Media Integration (optional)
FACEBOOK_PIXEL_ID=your_facebook_pixel_id_here
LINKEDIN_PARTNER_ID=your_linkedin_partner_id_here

# Affiliate Marketing (optional)
AFFILIATE_TRACKING_ID=your_affiliate_id_here

# Security Settings
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Development Settings
DEBUG_MODE=true
LOG_LEVEL=debug

# External Service URLs
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here

# CDN and Storage (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_S3_BUCKET=your_s3_bucket_here
AWS_REGION=us-east-1

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_newrelic_key_here